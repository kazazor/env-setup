#GIT
alias gl="git log --oneline --graph --all --decorate"
alias gls="git log --oneline --graph --all --decorate --stat"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gce="git checkout"
alias grh="git reset HEAD"
alias gcm="git commit -m"
alias gcma="git commit --amend --no-edit"
alias gd="git diff"
alias gdfl="git diff-tree --no-commit-id --name-only -r"
alias gb="git branch"
alias glog="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias grs="git reset HEAD"
alias gaa='git add -A'
alias gbpurge='git fetch --all -p; git branch -vv | grep ": gone]" | awk '{ print $1 }' | xargs -n 1 git branch -d'
alias c='clear'
